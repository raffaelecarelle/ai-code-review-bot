{
    "name": "raffaelecarelle/ai-code-review-bot",
    "description": "Minimal, extensible AI code review tool",
    "type": "library",
    "authors": [
        {
            "name": "Raffaele Carelle",
            "email": "raffaele.carelle@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "symfony/yaml": "^7.0|^6.0|^5.0",
        "symfony/filesystem": "^7.0|^6.0|^5.0",
        "symfony/console": "^7.0|^6.0|^5.0",
        "guzzlehttp/guzzle": "^7.8",
        "psr/log": "^3.0",
        "monolog/monolog": "^3.7"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.12",
        "rector/rector": "^1.2",
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "AICR\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AICR\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse",
        "rector:dry": "rector process --dry-run",
        "rector:apply": "rector process",
        "cs:fix": "php-cs-fixer fix --using-cache=no",
        "cs:check": "php-cs-fixer fix --dry-run --diff --using-cache=no",
        "tests": "phpunit",
        "pre-commit": [
            "@cs:fix",
            "@rector:apply",
            "@analyse",
            "@tests"
        ]
    },
    "bin": [
        "bin/aicr"
    ]
}
